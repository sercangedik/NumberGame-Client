<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/end_screen_top_background"
        android:id="@+id/relativeLayout"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/resultText"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            fontPath="fonts/Cronos.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="#e8e8e8"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/relativeLayout"
        android:background="@drawable/end_screen_middle_background"
        android:id="@+id/relativeLayout2"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/opponentNumber"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="60dp"
            fontPath="fonts/Cronos.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="#e8e8e8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rakibinizin Sayisi"
            android:id="@+id/textView"
            fontPath="fonts/Cronos.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="#e8e8e8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Anasayfaya\n DÃ¶n"
        android:id="@+id/backButton"
        android:layout_gravity="center_horizontal"
        fontPath="fonts/Cronos.ttf"
        android:background="@drawable/rounded_button"
        tools:ignore="MissingPrefix"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff" />

</RelativeLayout>